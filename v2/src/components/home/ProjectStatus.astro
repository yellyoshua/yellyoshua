---
import LightningIcon from '../../assets/LightningIcon.astro';
import ArchiveIcon from '../../assets/ArchiveIcon.astro';
import GlobeIcon from '../../assets/GlobeIcon.astro';
import type { Project } from '../../interfaces';

interface Props {
	status: Project['projectStatus'];
	class?: string;
}

const props = Astro.props;
---

<div class="absolute right-0 top-0">
	<div
		class="mt-4 mr-4 bg-white dark:bg-gray-900 rounded-2xl p-1.5 dark:border-[0.5px] dark:border-[#737373]"
	>
		{
			props.status === 'development' && (
				<p class="flex items-center rounded-2xl text-xs text-white m-auto bg-red-600 w-max px-2 py-1 leading-none dark:border-[0.5px] dark:border-[#737373]">
					<LightningIcon class="w-4 h-4 inline-block mr-1" />
					Development
				</p>
			)
		}

		{
			props.status === 'forgotten' && (
				<p class="flex items-center rounded-2xl text-xs text-white m-auto bg-yellow-600 w-max px-2 py-1 leading-none dark:border-[0.5px] dark:border-[#737373]">
					Forgotten
				</p>
			)
		}

		{
			props.status === 'archived' && (
				<p class="flex items-center rounded-2xl text-xs text-white m-auto bg-gray-600 w-max px-2 py-1 leading-none dark:border-[0.5px] dark:border-[#737373]">
					<ArchiveIcon class="w-4 h-4 inline-block mr-1" />
					Archived
				</p>
			)
		}

		{
			props.status === 'production' && (
				<p class="flex items-center rounded-2xl text-xs text-white m-auto bg-green-600 w-max px-2 py-1 leading-none dark:border-[0.5px] dark:border-[#737373]">
					<GlobeIcon class="w-4 h-4 inline-block mr-1" />
					Finished
				</p>
			)
		}
	</div>
</div>
