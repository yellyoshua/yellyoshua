---
import ServicesSection from '../components/home/ServicesSection.astro';
import Particles from '../components/Particles';
import MainLayout from '../layouts/MainLayout.astro';
import ProjectsList from '../ui/home/ProjectsList.astro';
import SpotifyCurrentTrack from '../ui/home/SpotifyCurrentTrack.astro';
import SuggestedPages from '../ui/page/SuggestedPages.astro';

export const prerender = true;
---

<MainLayout>
	<section id="hero" class="relative py-20 min-h-screen md:py-32">
		<Particles client:load />

		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center z-10">
			<span class="inline-block mb-4 bg-emerald-100 text-emerald-800 border-emerald-200  dark:bg-emerald-500/10 dark:text-emerald-400 px-4 py-1.5 rounded-full text-sm font-semibold border dark:border-emerald-500/30">
				Full-Stack Developer & SEO Specialist
			</span>
			<h1 class="text-4xl md:text-6xl font-bold tracking-tighter text-slate-900 dark:text-white mb-4">
				Transforming Ideas into Exceptional Digital Realities
			</h1>
			<p class="max-w-3xl mx-auto text-slate-600 dark:text-slate-400 md:text-xl mb-8">
				I'm Yoshua LÃ³pez, a developer specializing in creating scalable, high-performance web applications and optimizing for search engine visibility.
			</p>

			<div class="flex flex-col sm:flex-row justify-center gap-4">
				<a href="#projects-section" class="inline-block px-8 py-3 text-lg font-light rounded-lg bg-emerald-500 text-white hover:bg-emerald-600 dark:text-slate-950  dark:hover:bg-emerald-400 transition-colors">
					View My Work
				</a>
				<a href="#services" class="inline-block px-8 py-3 text-lg font-light rounded-lg border border-slate-300 text-slate-700 hover:bg-slate-100 dark:border-slate-700 dark:text-white dark:hover:bg-slate-800 transition-colors">
					My Services
				</a>
			</div>
		</div>

		<SpotifyCurrentTrack server:defer />
	</section>

	<ServicesSection />

	<ProjectsList />

	<!-- TODO: Add blog section -->
	<!-- <h3 class="text-center text-2xl font-arvo text-black dark:text-white mt-10 mb-5 italic">
		Feel free to explore and discover more about my journey <br/> through technology and life.
	</h3>

	<p class="text-center text-gray-500 dark:text-gray-400 mb-10">
		Some of my recent writings and thoughts are shared below.
	</p> -->

	<div class="py-24">
		<div class="text-center max-w-2xl mx-auto">
			<h2 class="text-3xl md:text-4xl font-bold text-white tracking-tighter">My Journey & Knowledge</h2>
			<p class="mt-4 text-lg text-slate-400">
				Passionate about technology and continuous learning. Here I share a bit about my story and insights.
			</p>
		</div>
	</div>

	<SuggestedPages disableHintText={true} limit={6} />
</MainLayout>
